# Staking CLI Configuration
# Generated by Ansible - Do not edit manually

[rpc]
url = "http://localhost:{{ monad_rpc_port }}"

[wallet]
# Funded wallet for transaction fees
private_key = "{{ vault_funded_wallet_private_key }}"

[validator]
# Beneficiary address for rewards
beneficiary = "{{ beneficiary_address }}"

# Authorization address
auth_address = "{{ auth_address }}"

[staking]
# Default stake amount in MON
default_amount = {{ validator_stake_amount }}

# Gas settings
gas_limit = 2000000
