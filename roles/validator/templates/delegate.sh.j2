#!/bin/bash
# Delegate additional stake to validator
# Generated by Ansible

set -e

AMOUNT=${1:-1000}

source {{ monad_home }}/staking-sdk-cli/cli-venv/bin/activate
cd {{ monad_home }}/staking-sdk-cli

echo "Delegating ${AMOUNT} MON..."

python staking-cli/main.py delegate \
  --amount ${AMOUNT} \
  --config-path config.toml

echo "Delegation complete!"
