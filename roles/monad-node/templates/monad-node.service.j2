[Unit]
Description=Monad Validator Node
After=network.target docker.service
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
User={{ monad_user }}
Group={{ monad_group }}
WorkingDirectory={{ monad_home }}/monad-bft/docker/single-node
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
ExecReload=/usr/bin/docker compose restart
TimeoutStartSec=300
TimeoutStopSec=120

[Install]
WantedBy=multi-user.target
