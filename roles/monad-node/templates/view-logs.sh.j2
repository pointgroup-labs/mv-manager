#!/bin/bash
# View Monad node logs
# Generated by Ansible

set -e

cd {{ monad_home }}/monad-bft/docker/single-node

case "${1:-all}" in
  consensus)
    docker compose logs -f consensus
    ;;
  execution)
    docker compose logs -f execution
    ;;
  rpc)
    docker compose logs -f rpc
    ;;
  all|*)
    docker compose logs -f
    ;;
esac
